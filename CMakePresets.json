{
    "version": 3,
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "build/${presetName}",
            "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
            "cacheVariables": {
                "mu_ENABLE_TEST": "ON",
                "CMAKE_C_FLAGS": "$env{MY_C_FLAGS} $env{MY_C_FLAGS_COVERAGE} $env{MY_C_FLAGS_SANITIZER}",
                "CMAKE_CXX_FLAGS": "$env{MY_CXX_FLAGS} $env{MY_CXX_FLAGS_COVERAGE} $env{MY_CXX_FLAGS_SANITIZER}",
                "CMAKE_INSTALL_PREFIX": "build/${presetName}/installed"
            }
        },
        {
            "name": "gcc",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            },
            "environment": {
                "MY_C_FLAGS": "-Wall -Wextra -Werror",
                "MY_CXX_FLAGS": "-Wall -Wextra -Werror"
            }
        },
        {
            "name": "msvc",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl"
            },
            "environment": {
                "MY_C_FLAGS": "/W4 /WX /EHsc",
                "MY_CXX_FLAGS": "/W4 /WX /EHsc"
            },
            "architecture": {
                "strategy": "external",
                "value": "x64"
            },
            "toolset": {
                "strategy": "external",
                "value": "host=x64"
            }
        },
        {
            "name": "clang",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            },
            "environment": {
                "MY_C_FLAGS": "-Wall -Wextra -Werror",
                "MY_CXX_FLAGS": "-Wall -Wextra -Werror"
            }
        },
        {
            "name": "gcov",
            "hidden": true,
            "environment": {
                "MY_C_FLAGS_COVERAGE": "--coverage",
                "MY_CXX_FLAGS_COVERAGE": "--coverage"
            }
        },
        {
            "name": "gcc-sanitizer-flags",
            "hidden": true,
            "environment": {
                "MY_C_FLAGS_SANITIZER": "-fsanitize=address -fsanitize=undefined",
                "MY_CXX_FLAGS_SANITIZER": "-fsanitize=address -fsanitize=undefined"
            }
        },
        {
            "name": "clang-sanitizer-flags",
            "hidden": true,
            "inherits": [
                "gcc-sanitizer-flags"
            ]
        },
        {
            "name": "msvc-sanitizer-flags",
            "hidden": true,
            "environment": {
                "MY_C_FLAGS_SANITIZER": "/fsanitize=address",
                "MY_CXX_FLAGS_SANITIZER": "/fsanitize=address"
            }
        },
        {
            "name": "debug",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "relwithdebinfo",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "minsizerel",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "MinSizeRel"
            }
        },
        {
            "name": "gcc-debug",
            "displayName": "GCC Debug",
            "inherits": [
                "base",
                "gcc",
                "debug"
            ]
        },
        {
